<%= form_with(model: @post, local: true, html: { multipart: true }) do |form| %>
    <div>
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>
    
    <div>
      <%= form.label :images %>
      <%= form.file_field :images, multiple: true %>
    </div>
    
    <div>
      <%= form.submit %>
    </div>
  <% end %>
  